<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/secondaryColor</item>
        <item name="colorPrimaryDark">@color/secondaryDarkColor</item>
        <item name="android:colorSecondary" tools:targetApi="25">@color/primaryColor</item>
        <item name="android:colorAccent" tools:targetApi="21">@color/primaryColor</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Theme of the book edit activity -->
    <style name="Editor_Theme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/secondaryDarkColor</item>
        <item name="colorPrimaryDark">@color/secondaryDarkColor</item>
        <item name="android:colorSecondary" tools:targetApi="25">@color/primaryColor</item>
        <item name="android:colorAccent" tools:targetApi="21">@color/secondaryColor</item>
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Theme of the app bar  -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/secondaryColor</item>
    </style>

    <!-- Theme of the app bar (Popup Overlay) -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Theme of the toolbar in detail activity -->
    <style name="DetailToolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/secondaryColor</item>
    </style>

    <!-- Theme of the book detail activity -->
    <style name="DetailTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/secondaryColor</item>
        <item name="colorPrimaryDark">@color/secondaryDarkColor</item>
        <item name="android:colorSecondary" tools:targetApi="25">@color/primaryColor</item>
        <item name="android:colorAccent" tools:targetApi="21">@color/primaryColor</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="EmptyViewText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DetailTitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/default_activity_margin</item>
        <item name="android:paddingRight">@dimen/default_activity_margin</item>
        <item name="android:paddingTop">@dimen/extra_narrow_activity_margin</item>
        <item name="android:paddingBottom">@dimen/extra_narrow_activity_margin</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:background">@color/secondaryColor</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="EditorTitleInputText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/activity_margin</item>
        <item name="android:paddingRight">@dimen/activity_margin</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:background">@color/white_background</item>
        <item name="android:textSize">25sp</item>
        <item name="android:editTextColor">@color/secondaryTextColor</item>
    </style>

    <style name="EditorErrorText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/narrow_activity_margin</item>
        <item name="android:paddingBottom">@dimen/narrow_activity_margin</item>
        <item name="android:paddingLeft">@dimen/activity_margin</item>
        <item name="android:paddingRight">@dimen/activity_margin</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:background">@color/white_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="EditorTitleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/narrow_activity_margin</item>
        <item name="android:paddingRight">@dimen/narrow_activity_margin</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">25sp</item>
        <item name="android:editTextColor">@color/secondaryTextColor</item>
    </style>

    <style name="EditorTextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/editor_field_margin_top</item>
        <item name="android:paddingBottom">@dimen/editor_field_margin_bottom</item>
        <item name="android:paddingLeft">@dimen/default_activity_margin</item>
        <item name="android:paddingRight">@dimen/default_activity_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/white_background</item>
    </style>

    <style name="EditorTextInputColumn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/editor_field_margin_top</item>
        <item name="android:paddingBottom">@dimen/editor_field_margin_bottom</item>
        <item name="android:paddingLeft">@dimen/extra_narrow_activity_margin</item>
        <item name="android:paddingRight">@dimen/extra_narrow_activity_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/white_background</item>
    </style>

    <style name="EditorSectionHeadingGreen">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">@dimen/narrow_activity_margin</item>
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:background">@color/white_background</item>
        <item name="android:layout_marginTop">@dimen/divider_size</item>
    </style>

    <style name="DetailSectionHeadingGrey">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/divider_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#8b8989</item>
    </style>

    <style name="SupplierDetails">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/divider_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#8b8989</item>
    </style>

    <style name="DetailMiniHeadingsGreen_MarginTop">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_margin</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DetailMiniHeadingsGreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="DetailFieldsValues">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/narrow_activity_margin</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">25sp</item>
        <item name="android:color">#000000</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="EditorFields_Centered">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/activity_margin</item>
        <item name="android:paddingRight">@dimen/activity_margin</item>
        <item name="android:paddingTop">@dimen/extra_narrow_activity_margin</item>
        <item name="android:paddingBottom">@dimen/extra_narrow_activity_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:color">#000000</item>
    </style>

    <style name="ListViewDetailStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/narrow_activity_margin</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ListViewBottomRow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingRight">@dimen/narrow_activity_margin</item>
        <item name="android:textColor">#747a7e</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="SalesPriceLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/activity_margin</item>
        <item name="android:paddingRight">@dimen/activity_margin</item>
        <item name="android:paddingTop">@dimen/extra_narrow_activity_margin</item>
        <item name="android:paddingBottom">@dimen/extra_narrow_activity_margin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="DetailQuantityAdjustButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="CounterQuantityText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/extra_narrow_activity_margin</item>
        <item name="android:layout_marginBottom">@dimen/extra_narrow_activity_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="DataSummary">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/extra_narrow_activity_margin</item>
        <item name="android:layout_marginBottom">@dimen/extra_narrow_activity_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:color">#000000</item>
        <item name="android:background">#ffffff</item>
        <item name="android:elevation" tools:targetApi="21">2dp</item>
    </style>

    <style name="DataSummaryHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_margin</item>
        <item name="android:textSize">20sp</item>
        <item name="android:color">#000000</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginLeft">@dimen/activity_margin</item>
    </style>

    <style name="SupplierDataSummaryHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/activity_margin</item>
        <item name="android:paddingLeft">@dimen/activity_margin</item>
        <item name="android:paddingRight">@dimen/activity_margin</item>
        <item name="android:textSize">20sp</item>
        <item name="android:color">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="SupplierDetailParagraphs">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/narrow_activity_margin</item>
        <item name="android:paddingBottom">@dimen/narrow_activity_margin</item>
        <item name="android:layout_marginBottom">@dimen/divider_size</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:paddingLeft">@dimen/activity_margin</item>
        <item name="android:paddingRight">@dimen/activity_margin</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="GenreHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/activity_margin</item>
        <item name="android:paddingLeft">@dimen/activity_margin</item>
        <item name="android:paddingRight">@dimen/narrow_activity_margin</item>
        <item name="android:textSize">20sp</item>
        <item name="android:color">#000000</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SlidingTabs">
        <item name="android:elevation" tools:targetApi="21">@dimen/bottom_nav_elevation</item>
    </style>
</resources>
