<?xml version="1.0" encoding="utf-8"?><!--Vertical Linear Layout containing a TextView containing the header for ListView-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/query_toolbar"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".QueryActivity"
    tools:showIn="@layout/activity_query">

    <!--TextView Above ListView-->
    <TextView
        android:id="@+id/listview_header_text"
        style="@style/DataSummaryHeading"
        android:layout_marginTop="@dimen/narrow_activity_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/inventory_summary_footer" />
</LinearLayout>